<li class="mb-4">
  <div class="flex items-center justify-between">
    <span><%= menu_item.title %></span>
    <div>
      <%= link_to 'Add Child', new_admin_menu_menu_item_path(menu_item.menu, parent_id: menu_item.id), class: 'btn btn-secondary' %>
      <%= link_to 'Edit', edit_admin_menu_menu_item_path(menu_item), class: 'btn btn-secondary' %>
      <%= link_to 'Delete', admin_menu_menu_item_path(menu_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>

    </div>
  </div>
  <% if menu_item.children.any? %>
    <ul class="ml-4">
      <%= render partial: 'admin/menu_items/menu_item', collection: menu_item.children, as: :menu_item %>
    </ul>
  <% end %>
</li>
