<!-- Second Section -->
<section class="m-4 lg:m-12">
  <h2 class="text-3xl lg:text-5xl font-bold mb-6 font-alegreya" style="color:#696969">Our Artificial Eyes and Facial Prosthetics Services</h2>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <% services.each do |service| %>
      <div>
        <% if service.featured_image.attached? %>
          <%= image_tag service.featured_image, class: 'w-full' %>
        <% else %>
          <%= image_tag 'ericksons-placeholder.jpg', alt: 'Placeholder', class: 'w-full' %>
        <% end %>
        <h3 class="text-lg font-bold text-center"><%= service.title %></h3>
      </div>
    <% end %>
  </div>
</section>
